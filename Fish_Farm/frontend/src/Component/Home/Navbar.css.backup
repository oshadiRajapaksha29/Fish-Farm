  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: var(--transition);
  position: relative;
  overflow: hidden;
  z-index: 1;
  letter-spacing: 0.3px;
}

/* Signin Button */
.auth-btn.signin {
  border: 2px solid var(--primary-dark);
  background: transparent;
  color: var(--primary-dark);
}

.auth-btn.signin::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: var(--primary-dark);
  z-index: -1;
  transform: scaleX(0);
  transform-origin: right;
  transition: transform 0.5s cubic-bezier(0.19, 1, 0.22, 1);
}

.auth-btn.signin:hover {
  color: var(--text-light);
  box-shadow: 0 5px 15px rgba(7, 36, 72, 0.2);
}

.auth-btn.signin:hover::before {
  transform: scaleX(1);
  transform-origin: left;
}

/* Join Button */
.auth-btn.join {
  background: linear-gradient(135deg, var(--accent) 0%, #2cc46c 100%);
  color: var(--text-light);
  border: none;
  box-shadow: 0 4px 15px rgba(39, 174, 96, 0.25);
}

.auth-btn.join:hover {
  background: linear-gradient(135deg, #2cc46c 0%, var(--accent) 100%);
  box-shadow: 0 6px 20px rgba(39, 174, 96, 0.35);
  transform: translateY(-1px);
}

/* My Orders link */
.orders-link {
  text-decoration: none;
  padding: 8px 16px;
  margin-right: 10px;
  border-radius: var(--border-radius);
  font-weight: 500;
  color: var(--primary-dark);
  background-color: transparent;
  transition: var(--transition);
  display: none; /* Hide the orders link */
  align-items: center;
  gap: 6px;
  position: relative;
  overflow: hidden;
}

.orders-link::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(7, 36, 72, 0.08);
  z-index: -1;
  transform: scaleX(0);
  transform-origin: right;
  transition: transform 0.4s cubic-bezier(0.19, 1, 0.22, 1);
}

.orders-link:hover {
  color: var(--primary-dark);
}

.orders-link:hover::before {
  transform: scaleX(1);
  transform-origin: left;
}

.orders-link.active {
  background-color: rgba(7, 36, 72, 0.12);
  color: var(--primary-dark);
  font-weight: 600;
}

