/* Modern Navbar - Aquatic Theme */
/* Design System Variables */
:root {
  --nav-primary: #0891b2;
  --nav-primary-dark: #0e7490;
  --nav-secondary: #06b6d4;
  --nav-accent: #0c4a6e;
  --nav-text: #1a202c;
  --nav-text-light: #64748b;
  --nav-bg: #ffffff;
  --nav-hover: #f0f9ff;
  --nav-border: #e0f2fe;
  --nav-shadow: 0 4px 20px rgba(3, 105, 161, 0.1);
  --nav-shadow-scrolled: 0 8px 30px rgba(3, 105, 161, 0.15);
  --nav-transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  --nav-radius: 12px;
}

/* Reset */
body {
  margin: 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', sans-serif;
}

/* Navbar Container */
.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem 3rem;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  box-shadow: var(--nav-shadow);
  position: sticky;
  top: 0;
  z-index: 1000;
  border-bottom: 1px solid var(--nav-border);
  transition: var(--nav-transition);
}

.navbar-scrolled {
  padding: 0.75rem 3rem;
  box-shadow: var(--nav-shadow-scrolled);
  background: rgba(255, 255, 255, 0.98);
}

/* Logo */
.logo {
  display: flex;
  align-items: center;
  cursor: pointer;
  gap: 12px;
  transition: var(--nav-transition);
  padding: 0.5rem;
  border-radius: var(--nav-radius);
}

.logo:hover {
  transform: translateY(-2px);
}

.logo-img {
  height: 50px;
  width: auto;
  filter: drop-shadow(0 2px 6px rgba(8, 145, 178, 0.2));
  transition: var(--nav-transition);
}

.navbar-scrolled .logo-img {
  height: 45px;
}

.logo:hover .logo-img {
  filter: drop-shadow(0 4px 8px rgba(8, 145, 178, 0.3));
}

.logo-text-block {
  display: flex;
  flex-direction: column;
}

.logo-text {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--nav-accent);
  letter-spacing: -0.5px;
  line-height: 1.2;
}

.logoUp-text {
  font-size: 0.75rem;
  color: var(--nav-primary);
  font-weight: 600;
  letter-spacing: 1px;
  text-transform: uppercase;
}

/* Mobile Menu Toggle */
.mobile-menu-toggle {
  display: none;
  background: none;
  border: none;
  color: var(--nav-accent);
  cursor: pointer;
  padding: 0.5rem;
  border-radius: var(--nav-radius);
  transition: var(--nav-transition);
}

.mobile-menu-toggle:hover {
  background: var(--nav-hover);
  color: var(--nav-primary);
}

/* Nav Links */
.nav-links {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.nav-links a {
  padding: 0.75rem 1.25rem;
  border-radius: var(--nav-radius);
  text-decoration: none;
  color: var(--nav-text);
  font-weight: 500;
  font-size: 0.95rem;
  transition: var(--nav-transition);
  position: relative;
  overflow: hidden;
}

/* Animated underline effect */
.nav-links a::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 0;
  height: 3px;
  background: linear-gradient(135deg, var(--nav-primary) 0%, var(--nav-secondary) 100%);
  transition: var(--nav-transition);
  transform: translateX(-50%);
  border-radius: 2px;
}

.nav-links a:hover {
  color: var(--nav-primary);
  background: var(--nav-hover);
  transform: translateY(-2px);
}

.nav-links a:hover::before {
  width: 70%;
}

/* Active link */
.nav-links a.active {
  background: linear-gradient(135deg, var(--nav-primary) 0%, var(--nav-secondary) 100%);
  color: white;
  font-weight: 600;
  box-shadow: 0 4px 12px rgba(8, 145, 178, 0.3);
}

.nav-links a.active::before {
  display: none;
}

/* Right Section */
.nav-right {
  display: flex;
  align-items: center;
  gap: 1rem;
}

/* Orders Link */
.orders-link {
  padding: 0.75rem 1.25rem;
  border-radius: var(--nav-radius);
  text-decoration: none;
  color: var(--nav-text);
  font-weight: 500;
  font-size: 0.95rem;
  transition: var(--nav-transition);
  position: relative;
}

.orders-link::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 0;
  height: 3px;
  background: linear-gradient(135deg, var(--nav-primary) 0%, var(--nav-secondary) 100%);
  transition: var(--nav-transition);
  transform: translateX(-50%);
  border-radius: 2px;
}

.orders-link:hover {
  color: var(--nav-primary);
  background: var(--nav-hover);
  transform: translateY(-2px);
}

.orders-link:hover::before {
  width: 70%;
}

.orders-link.active {
  background: linear-gradient(135deg, var(--nav-primary) 0%, var(--nav-secondary) 100%);
  color: white;
  font-weight: 600;
  box-shadow: 0 4px 12px rgba(8, 145, 178, 0.3);
}

.orders-link.active::before {
  display: none;
}

/* Icon Buttons */
.icon-btn {
  width: 42px;
  height: 42px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--nav-hover);
  border: 1px solid var(--nav-border);
  border-radius: var(--nav-radius);
  cursor: pointer;
  transition: var(--nav-transition);
  position: relative;
}

.icon-btn:hover {
  background: white;
  border-color: var(--nav-primary);
  color: var(--nav-primary);
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(8, 145, 178, 0.2);
}

.search-btn {
  color: var(--nav-text);
}

/* Cart Button */
.cart-btn {
  background: transparent;
  border: none;
}

.cart-icon-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 42px;
  height: 42px;
  background: var(--nav-hover);
  border: 1px solid var(--nav-border);
  border-radius: var(--nav-radius);
  cursor: pointer;
  transition: var(--nav-transition);
  color: var(--nav-text);
}

.cart-icon-wrapper:hover {
  background: white;
  border-color: var(--nav-primary);
  color: var(--nav-primary);
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(8, 145, 178, 0.2);
}

.cart-badge {
  position: absolute;
  top: -6px;
  right: -6px;
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  color: white;
  font-size: 0.7rem;
  font-weight: 700;
  padding: 0.15rem 0.4rem;
  border-radius: 10px;
  min-width: 18px;
  text-align: center;
  box-shadow: 0 2px 8px rgba(239, 68, 68, 0.4);
  animation: badgePulse 2s infinite;
}

@keyframes badgePulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
}

/* User Profile Button */
.user-profile-btn {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.5rem 1rem;
  background: var(--nav-hover);
  border: 1px solid var(--nav-border);
  border-radius: var(--nav-radius);
  cursor: pointer;
  transition: var(--nav-transition);
}

.user-profile-btn:hover {
  background: white;
  border-color: var(--nav-primary);
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(8, 145, 178, 0.2);
}

.user-avatar {
  width: 35px;
  height: 35px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, var(--nav-primary) 0%, var(--nav-secondary) 100%);
  overflow: hidden;
  border: 2px solid white;
  box-shadow: 0 2px 8px rgba(8, 145, 178, 0.2);
}

.user-avatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.user-avatar svg {
  color: white;
}

.user-name {
  font-size: 0.9rem;
  font-weight: 600;
  color: var(--nav-text);
  max-width: 120px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* Auth Buttons */
.auth-buttons {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.auth-btn {
  padding: 0.75rem 1.5rem;
  border-radius: var(--nav-radius);
  font-weight: 600;
  font-size: 0.9rem;
  cursor: pointer;
  transition: var(--nav-transition);
  border: 2px solid var(--nav-primary);
}

.auth-btn.signin {
  background: transparent;
  color: var(--nav-primary);
}

.auth-btn.signin:hover {
  background: var(--nav-primary);
  color: white;
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(8, 145, 178, 0.3);
}

.auth-btn.join {
  background: linear-gradient(135deg, var(--nav-primary) 0%, var(--nav-secondary) 100%);
  color: white;
  border-color: transparent;
  box-shadow: 0 4px 12px rgba(8, 145, 178, 0.2);
}

.auth-btn.join:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(8, 145, 178, 0.4);
}

/* Responsive Design */
@media (max-width: 1024px) {
  .navbar {
    padding: 1rem 2rem;
  }
  
  .nav-links {
    gap: 0.25rem;
  }
  
  .nav-links a,
  .orders-link {
    padding: 0.6rem 1rem;
    font-size: 0.9rem;
  }
}

@media (max-width: 768px) {
  .navbar {
    padding: 1rem 1.5rem;
  }
  
  .mobile-menu-toggle {
    display: block;
  }
  
  .nav-links {
    position: fixed;
    top: 0;
    right: -100%;
    width: 280px;
    height: 100vh;
    background: white;
    flex-direction: column;
    padding: 5rem 2rem 2rem;
    box-shadow: -4px 0 20px rgba(3, 105, 161, 0.1);
    transition: right 0.3s ease;
    align-items: stretch;
  }
  
  .nav-links.mobile-active {
    right: 0;
  }
  
  .nav-links a {
    width: 100%;
    padding: 1rem;
    border-radius: var(--nav-radius);
  }
  
  .orders-link {
    display: none;
  }
  
  .user-name {
    display: none;
  }
  
  .auth-buttons {
    flex-direction: column;
    width: 100%;
  }
  
  .auth-btn {
    width: 100%;
  }
}

@media (max-width: 576px) {
  .navbar {
    padding: 0.75rem 1rem;
  }
  
  .logo-text {
    font-size: 1.25rem;
  }
  
  .logoUp-text {
    font-size: 0.7rem;
  }
  
  .icon-btn,
  .cart-icon-wrapper {
    width: 38px;
    height: 38px;
  }
  
  .nav-right {
    gap: 0.5rem;
  }
}
